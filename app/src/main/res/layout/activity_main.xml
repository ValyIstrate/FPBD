<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/btn_ldmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="changeTheme"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/scv_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn1"
                android:onClick="btn1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:text="Introducere"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn2"
                android:onClick="btn2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn1"
                android:text="Functii Numerice"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn3"
                android:onClick="btn3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn2"
                android:text="Functii de Tip Data"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn4"
                android:onClick="btn4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn3"
                android:text="Functii de Conversie"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn5"
                android:onClick="btn5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn4"
                android:text="Functii Generale"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn6"
                android:onClick="btn6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn5"
                android:text="Functii de Grup"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/forma_button"
                android:id="@+id/btn7"
                android:onClick="btn7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn6"
                android:text="Functii Conditionale"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>